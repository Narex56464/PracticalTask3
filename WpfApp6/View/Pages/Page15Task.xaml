<Page x:Class="WpfApp6.View.Pages.Page15Task"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page15Task">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 15"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="Black"/>

            <TextBlock Margin="0 20 0 0"
                       Text="Введите m"
                       FontSize="20"
                       Background="Black"
                       Foreground="White"
                       FontWeight="Bold"/>
            <TextBox x:Name="TbM"
                     Height="30"
                     Background="Transparent"                   
                     FontSize="20"
                     BorderBrush="Black"
                     BorderThickness="3"/>

            <TextBlock Margin="0 20 0 0"
                       Text="Введите y"
                       FontSize="20"
                       Background="Black"
                       Foreground="White"
                       FontWeight="Bold"/>
            <TextBox x:Name="TbY"
                     Height="30"
                     Background="Transparent"                   
                     FontSize="20"
                     BorderBrush="Black"
                     BorderThickness="3"/>

            <Button Content="Ответ"
                    FontSize="20"
                    Margin="0 20 0 0"
                    FontWeight="Bold"
                    Padding="5"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Background="Black"
                    BorderBrush="DarkCyan"
                    Foreground="White"
                    BorderThickness="5"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0 0 0 10">
            <TextBlock Text="Результат"
                       FontSize="30"
                       x:Name="TbRes"
                       Margin="0 5 0 0"
                       FontWeight="Bold"
                       Background="Black"
                       Foreground="White"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0 10 10 0">
            <Button Content="Задание 16"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNewTask"
                    Click="BtnNewTask_Click"
                    Background="Black"
                    Foreground="White"
                    BorderBrush="Red"
                    BorderThickness="5"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10 10 0 0">
            <Button Content="На главную"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnOnMain"
                    Click="BtnOnMain_Click"
                    Background="Black"
                    Foreground="White"
                    BorderThickness="5"
                    BorderBrush="Gray"/>
        </StackPanel>
    </Grid>
</Page>
